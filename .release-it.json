{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": [
        "package.json",
        "package-lock.json",
        "libs/**/package*.json"
      ]
    }
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": "cp README.md libs/tailwind/README.md"
  }
}
